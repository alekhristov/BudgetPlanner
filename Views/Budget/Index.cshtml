@using BudgetPlanner.Models
@model BudgetsViewModel

@{
    ViewData["Title"] = "Budget";
}

@*<h3><a asp-action="Create" class="btn btn-sm btn-secondary">Create</a></h3>*@
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>Month</th>
            <th>Planned</th>
            <th>Available</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Budgets == null || Model.Budgets.Count <= 0)
        {
            <tr>
                <td colspan="100" class="text-center">You have no budgets.</td>
            </tr>
        }
        else
        {
            @foreach (var b in Model.Budgets)
            {
                <tr>
                    <td>@b.Month</td>
                    <td>@String.Format("{0:0.00}", b.PlannedAmount)</td>
                    <td>@String.Format("{0:0.00}", b.AvailableAmount)</td>
                </tr>
            }
        }
    </tbody>
</table>