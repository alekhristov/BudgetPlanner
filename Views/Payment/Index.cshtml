@using BudgetPlanner.Models
@model PaymentsViewModel

@{
    ViewData["Title"] = "Payments";
}

<h3><a asp-action="Create" class="btn btn-sm btn-secondary">Create</a></h3>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Payments == null || Model.Payments.Count <= 0)
        {
            <tr>
                <td colspan="100" class="text-center">You have no payments.</td>
            </tr>
        }
        else
        {
            @foreach (var p in Model.Payments)
            {
                <tr>
                    <td>@String.Format("{0:d}", p.Date)</td>
                    <td>@String.Format("{0:0.00}", p.Amount)</td>
                    <td>@p.Category.Name</td>
                    <td>@p.Comment</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>